<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminActivity">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/admin_pagina"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnImportCSV"
        android:text="@string/csv_importeren"
        app:layout_constraintTop_toBottomOf="@+id/Welcome"

        android:layout_width="200dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="150dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btnExportCSV"
        app:layout_constraintTop_toBottomOf="@+id/Welcome"
        android:text="@string/csv_exporteren"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnShowAllStudents"
        app:layout_constraintTop_toBottomOf="@+id/btnExportCSV"
        android:text="@string/lijst_studenten"

        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnSync"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/button"
        android:text="@string/firebase_synchronisatie"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnImportCSV" />

    <Button
        android:id="@+id/btnClearDB"
        android:layout_width="200dp"
        android:layout_marginTop="50dp"

        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:enabled="true"
        android:text="@string/verwijder_local_storage"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShowAllStudents" />


    <Button
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/home_button"
        android:text="@string/home"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>